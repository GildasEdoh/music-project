<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1C5C"
    android:padding="16dp">

    <!-- Toolbar avec option pour retourner en arriÃ¨re -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/background_with_ripple"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Modifier la musique"
        app:titleTextColor="@color/white" />

    <!-- CardView contenant tous les champs -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/toolbar"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:background="@android:color/transparent"> <!-- Couleur transparente -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#436D6A6A"
            android:backgroundTint="#80000000"
            android:clipToOutline="true">

            <!-- Champ pour l'image -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp">

                <!-- Bouton pour changer l'image -->
                <ImageView
                    android:id="@+id/song_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/change_image_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_action_edit"
                    android:padding="8dp" />
            </FrameLayout>

            <!-- Champ pour le titre de la chanson -->
            <EditText
                android:id="@+id/song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titre de la chanson"
                android:padding="12dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:backgroundTint="@color/black" />

            <!-- Champ pour l'artiste -->
            <EditText
                android:id="@+id/song_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Artiste"
                android:padding="12dp"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:backgroundTint="@color/black"
                android:layout_marginTop="8dp" />

            <!-- Champ pour l'album -->
            <EditText
                android:id="@+id/song_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Album"
                android:padding="12dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:backgroundTint="@color/black"
                android:layout_marginTop="8dp" />

            <!-- Bouton pour enregistrer -->
            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="110dp"
                android:backgroundTint="#1E1C5C"
                android:text="Enregistrer"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
