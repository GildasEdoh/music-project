<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Barre supÃ©rieure -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#2B1D50"
        android:elevation="4dp">

        <!-- Bouton de retour -->
        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_action_previous_item"
            android:contentDescription="Back"
            android:layout_marginEnd="8dp" />

        <!-- Barre de recherche -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#C8473A7E"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:hint="Search..."
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <!-- Icone de recherche -->
            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_recherche_foreground"
                android:contentDescription="Search" />
        </LinearLayout>

    </LinearLayout>

    <!-- RecyclerView pour la liste -->

    <!-- Barre de navigation en bas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:background="#2B1D50"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:context=".ui.MainActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#C8473A7E"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="5">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_home_foreground" />

        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_action_favorite" />

        <ImageView
            android:id="@+id/music_icon"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="10dp"

            android:src="@drawable/dossier" />

        <ImageView
            android:id="@+id/time_icon"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_time_foreground" />

        <ImageView
            android:id="@+id/setting_icon"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_setting_foreground" />
    </LinearLayout>
</LinearLayout>
